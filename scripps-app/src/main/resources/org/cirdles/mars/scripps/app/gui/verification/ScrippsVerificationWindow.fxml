<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.cirdles.mars.scripps.app.gui.common.ScrippsMenuBar?>
<?import org.cirdles.mars.scripps.app.gui.verification.ScrippsVerificationWindow?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         type="org.cirdles.mars.scripps.app.gui.verification.ScrippsVerificationWindow"
         prefWidth="800"
         prefHeight="600">

    <ScrippsMenuBar/>

    <GridPane hgap="10" vgap="10"
              VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold">
            Name
        </Label>

        <Text GridPane.rowIndex="0" GridPane.columnIndex="1">
            Test Sample
        </Text>

        <Button GridPane.rowIndex="1" GridPane.columnIndex="1"
                onAction="#verifyAndContinue">
            Verify and Continue
        </Button>
    </GridPane>
</fx:root>